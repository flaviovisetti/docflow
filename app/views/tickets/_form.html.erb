<%= simple_form_for @ticket do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Create a new ticket</h3>
    </div>
    <div class="panel-body">
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :recipient %>
      <%= f.input :attach, as: :file %>
    </div>
  </div>
  <nav>
    <%= f.submit 'Registrar', class: 'btn btn-default' %>
    <%= link_to 'voltar', user_path(@current_user), class: 'btn btn-default' %>
  </nav>
<% end %>
