<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @user.name %></h3>
  </div>
  <div class="panel-body">
    <p>Tickets which you have opened.</p>
  </div>
  <table class="table">
    <tr>
      <th> # </th>
      <th>Título</th>
      <th>Destinatário</th>
      <th>Status</th>
    </tr>
    <% @user.tickets.each do |t| %>
      <tr>
        <td><%= t.id %></td>
        <td><%= link_to t.title, t %></td>
        <td><%= t.recipient %></td>
        <td><%= t.status %></td>
      </tr>
    <% end %>
  </table>
</div>
