<%= simple_form_for @user do |u| %>
  <%= u.input :name, label: 'Nome Completo' %>
  <%= u.input :mail, label: 'E-mail' %>
  <%= u.input :birthdate, label: 'Data Nascimento' %>
  <%= u.submit 'Cadastrar' %>
<% end %>

<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>
